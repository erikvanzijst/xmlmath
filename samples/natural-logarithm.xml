<?xml version="1.0" encoding="UTF-8"?>
<!--
This expression computes the integral of 1 to e for y=1/x. Note that this must
be 1 by definition.

reference:
http://mathworld.wolfram.com/NaturalLogarithm.html
-->

<expression xmlns="http://xmlmath.org/1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlmath.org/1.0 http://xmlmath.org/1.0">
	
	<declare name="start">
		<double value="1.0"/>
	</declare>
	<declare name="end">
		<e/>
	</declare>
	<declare name="accuracy">
		<double value="10000"/>
	</declare>
	
	<sum iterator="it" datatype="double">
		<toLong>
			<product datatype="long">
				<linkDouble name="start"/>
				<linkDouble name="accuracy"/>
			</product>
		</toLong>
		<toLong>
			<subtract datatype="long">
				<product datatype="double">
					<linkDouble name="end"/>
					<linkDouble name="accuracy"/>
				</product>
				<long value="1"/>
			</subtract>
		</toLong>
	
		<product>
			<declare name="x">
				<toDouble>
					<add>
						<quotient datatype="double">
							<linkLong name="it"/>
							<linkDouble name="accuracy"/>
						</quotient>
						<quotient datatype="double">
							<double value=".5"/>
							<linkDouble name="accuracy"/>
						</quotient>
					</add>
				</toDouble>
			</declare>

			<!-- this is the actual function that is being integrated
			-->
			<quotient datatype="double">
				<double value="1.0"/>
				<linkDouble name="x"/>
			</quotient>
			
			<quotient datatype="double">
				<double value="1.0"/>
				<linkDouble name="accuracy"/>
			</quotient>
		</product>
	</sum>
	
</expression>
